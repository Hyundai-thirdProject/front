<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/home_banner_Iv1"
            android:layout_width="133dp"
            android:layout_height="167dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/home_banner_Iv2"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:id="@+id/home_banner_Iv2"
            android:layout_width="133dp"
            android:layout_height="167dp"
            android:src="@drawable/logo2"
            app:layout_constraintStart_toEndOf="@id/home_banner_Iv1"
            app:layout_constraintEnd_toStartOf="@id/home_banner_Iv3"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:id="@+id/home_banner_Iv3"
            android:layout_width="133dp"
            android:layout_height="167dp"
            android:src="@drawable/logo3"
            app:layout_constraintStart_toEndOf="@id/home_banner_Iv2"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:id="@+id/home_banner_Iv4"
            android:layout_width="133dp"
            android:layout_height="167dp"
            android:src="@drawable/logo4"
            app:layout_constraintStart_toEndOf="@id/home_banner_Iv3"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>